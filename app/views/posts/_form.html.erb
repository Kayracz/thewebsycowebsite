
<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :subtitle %>
    <%= f.input :text1 %>
    <%= f.input :text2 %>
    <%= f.input :text3 %>
    <%= f.input :text4 %>
    <%= f.input :text5 %>
    <%= f.input :text6 %>
    <%= f.input :text7 %>
    <%= f.input :text8 %>
    <%= f.input :text9 %>
    <%= f.input :text10 %>
    <%= f.input :photo %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
