<div class="container">
<%= simple_form_for(@message) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name,  placeholder: "Brad Pitt"  %>
    <%= f.input :email, placeholder: "BradPitt@gmail.com" %>
    <%= f.input :subject, placeholder: "I want a website"  %>
    <%= f.input :message, placeholder: "How u doin ;)"  %>

  <div class="form-actions">
     <input type="submit" name="commit" value="<%= t"homes.enviar"%>" class="btn" data-disable-with="<%= t"homes.enviando"%>">
  <!--   <%= f.button :submit %> -->
<% end %>
  </div>
  </div>
</div>




